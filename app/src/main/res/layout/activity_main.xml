<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.trombleyk.trombleyfirstapp.MainActivity">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <include layout="@layout/content_main" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <EditText
            android:id="@+id/dec.txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/bin.lbl"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="100dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            tools:ignore="HardcodedText,LabelFor" />

        <TextView
            android:id="@+id/bin.lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/dec.lbl"
            android:layout_centerVertical="true"
            android:layout_weight="1"
            android:text="Binary"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/bin.txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/bin.lbl"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            tools:ignore="HardcodedText,LabelFor" />

        <EditText
            android:id="@+id/hex.txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="100dp"
            android:layout_weight="1"
            android:ems="10"
            android:inputType="textPersonName"
            tools:ignore="HardcodedText,LabelFor" />

        <TextView
            android:id="@+id/hex.lbl"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/hex.txt"
            android:layout_alignStart="@+id/fromBin.btn"
            android:layout_marginStart="48dp"
            android:layout_weight="1"
            android:text="Hexadecimal"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/dec.lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/dec.txt"
            android:layout_centerHorizontal="true"
            android:text="Decimal" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/dec.lbl"
            android:layout_centerHorizontal="true"
            android:text="Convert From Decimal" />

        <Button
            android:id="@+id/fromBin.btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/bin.lbl"
            android:layout_centerHorizontal="true"
            android:text="Convert From Binary" />

        <Button
            android:id="@+id/fromHex.btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/hex.lbl"
            android:layout_centerHorizontal="true"
            android:text="Convert From Hexadecimal" />
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
